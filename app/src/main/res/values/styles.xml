<resources>

    <style name="AppTheme" parent="Base.Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="CustomCardView" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/respiro_visual_menor</item>
        <item name="android:layout_marginRight">@dimen/respiro_visual_menor</item>
        <item name="android:layout_marginTop">@dimen/respiro_visual_menor</item>
        <item name="android:padding">@dimen/respiro_visual</item>
        <item name="cardCornerRadius">@dimen/respiro_visual_menor</item>
        <item name="cardElevation">@dimen/respiro_visual_menor</item>
        <item name="contentPadding">@dimen/respiro_visual</item>
    </style>

</resources>
